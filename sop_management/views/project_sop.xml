<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_sop_view_list" model="ir.ui.view">
        <field name="name">project_sop.view.list</field>
        <field name="model">project.sop</field>
        <field name="arch" type="xml">
            <list string="Standard Operating Procedure (SOP)">
                <field name="code" />
                <field name="name" />
                <field name="description" />
            </list>
        </field>
    </record>

    <record id="project_sop_view_form" model="ir.ui.view">
        <field name="name">project_sop.view.form</field>
        <field name="model">project.sop</field>
        <field name="arch" type="xml">
            <form string="Standard Operating Procedure (SOP)">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                    <notebook>
                        <page string="SOP Checklist">
                            <field name="checklist_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="number" />
                                    <field name="name" />
                                    <field name="section" />
                                    <field name="description" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="project_sop_action" model="ir.actions.act_window">
        <field name="name">Standard Operating Procedure (SOP)</field>
        <field name="res_model">project.sop</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="project_zoning_sop_management_root_menu" name="SOP Management" parent="project.menu_main_pm" sequence="3"/>
    <menuitem id="project_zoning_sop_action_menu" name="Standard Operating Procedure (SOP)" action="project_sop_action" parent="project_zoning_sop_management_root_menu" sequence="1"/>

</odoo>

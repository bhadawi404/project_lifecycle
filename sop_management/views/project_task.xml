<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_inherit_sop_management" model="ir.ui.view">
        <field name="name">project.task.inherit.sop.management</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="sop_id" />
            </xpath>
            <xpath expr="//page[@name='description_page']" position="after">
                <page name="checklist_task" string="Checklist">
                    <field name="checklist_ids">
                        <list editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="number" />
                            <field name="name" width="50%"/>
                            <field name="section" width="50%"/>
                            <field name="description" width="50%"/>
                            <field name="is_done" width="50%"/>
                            <field name="reviewer_id" readonly="1" width="50%"/>
                            <field name="reviewed_date" readonly="1" width="50%"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>

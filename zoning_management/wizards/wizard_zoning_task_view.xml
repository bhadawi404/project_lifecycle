<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_zoning_task_view_form" model="ir.ui.view">
        <field name="name">wizard.zoning.task.form</field>
        <field name="model">zoning.task.wizard</field>
        <field name="arch" type="xml">
            <form string="Create / Link Task" class="o_form_full_width">
                <sheet>
                    <group>
                        <field name="action_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="project_id" readonly="1"/>
                        <field name="analysis_id" readonly="1"/>
                        <field name="zoning_line_id" readonly="1"/>
                    </group>

                    <!-- Link Existing Task Mode -->
                    <group invisible="action_type != 'link'">
                        <separator string="Link Existing Task(s)"/>

                        <field name="existing_task_ids" nolabel="1" widget="one2many_list" domain="[('project_id', '=', project_id)]" readonly="context.get('from_zoning_analysis')">
                            <list editable="top" create="0" delete="0">
                                <field name="name"/>
                                <field name="phase_id"/>
                                <field name="project_id"/>
                            </list>
                        </field>
                    </group>

                    <!-- Info untuk Create Mode -->
                    <group invisible="action_type != 'create'">
                        <separator string="Create New Task"/>
                        <field name="task_ids" nolabel="1">
                            <list editable="bottom">
                                <field name="name" />
                                <field name="user_ids" options="{'no_open': True, 'no_quick_create': True}" widget="many2many_avatar_user"/>
                                <field name="date_deadline" />
                                <field name="description" />
                            </list>
                        </field>
                    </group>

                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

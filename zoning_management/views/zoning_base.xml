<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_zoning_list" model="ir.ui.view">
        <field name="name">project.zoning.list</field>
        <field name="model">project.zoning</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="project_id"/>
                <field name="state"/>
                <field name="violation_count"/>
            </list>
        </field>
    </record>

    <record id="view_project_zoning_form" model="ir.ui.view">
        <field name="name">project.zoning.form</field>
        <field name="model">project.zoning</field>
        <field name="arch" type="xml">
            <form string="Zoning Analysis">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_evaluate_rules" type="object" string="Evaluate Rules" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="phase_id" domain="[('is_zoning_phase','=', True)]"/>
                            <field name="land_area"/>
                            <field name="building_area"/>
                            <field name="far" readonly="1"/>
                            <field name="height_limit"/>
                        </group>
                        <group>
                            <field name="green_ratio" />
                            <field name="setback_front"/>
                            <field name="setback_side"/>
                            <field name="setback_rear"/>
                            <field name="area_coverage"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Triggered Rules">
                            <group>
                                <field name="zoning_rule_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Legal References">
                            <group>
                                <field name="zoning_snippet_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Generated Tasks">
                            <field name="task_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="sheet_code"/>
                                    <field name="sop_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Evaluation Logs">
                            <field name="evaluation_log_ids">
                                <list create="false" edit="false" delete="false">
                                    <field name="evaluated_on"/>
                                    <field name="rule_id"/>
                                    <field name="result"/>
                                    <field name="message"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="project_zoning_action" model="ir.actions.act_window">
        <field name="name">Zoning Analysis</field>
        <field name="res_model">project.zoning</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>

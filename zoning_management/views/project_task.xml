<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_zoning_analysis_inherit_form" model="ir.ui.view">
        <field name="name">project.task.zoning.analysis.inherit.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="phase_id" required="1" widget="selection"/>
                <field name="show_zoning_tab" string="Add Zoning" widget="boolean_toggle" readonly="context.get('from_zoning_analysis')"/>
                <!-- <field name="analysis_id" readonly="context.get('from_zoning_analysis')"/>
                <field name="available_zoning_line_ids" force_save="1" widget="many2many_tags" invisible="1"/>
                <field name="zoning_line_ids" widget="many2many_tags" domain="[('id', 'in', available_zoning_line_ids)]" options="{'no_create': True}" readonly="context.get('from_zoning_analysis')"/> -->
            </xpath>
            <!-- <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_add_zoning" type="object" string="Add Zoning" class="oe_stat_button" icon="fa-map-signs"/>
            </xpath> -->
            <xpath expr="//notebook" position="inside">
                <page name="zoning_tab" string="Zoning" invisible="not show_zoning_tab">
                    <group>
                        <field name="analysis_id" string="Zoning Analysis" options="{'no_create': True}" domain="[('project_id', '=', project_id)]" readonly="context.get('from_zoning_analysis')"/>
                        <field name="available_zoning_line_ids" force_save="1" widget="many2many_tags" invisible="1"/>
                        <separator string="Zoning Lines Table"/>
                        <field name="zoning_line_ids" nolabel="1" widget="one2many_list" domain="[('id', 'in', available_zoning_line_ids)]" readonly="context.get('from_zoning_analysis')">
                            <list editable="top" create="0" delete="0">
                                <field name="zoning_code"/>
                                <field name="description"/>
                                <field name="max_allowed"/>
                                <field name="proposed"/>
                            </list>
                        </field>
                    </group>

                </page>
            </xpath>
        </field>
    </record>
    <record id="view_task_search_inherit_phase" model="ir.ui.view">
        <field name="name">project.task.search.phase</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_tasks']" position="after">
                <separator/>
                <filter name="phase_sd" string="SD" domain="[('phase_id.code', '=', 'SD')]"/>
                <filter name="phase_dd" string="DD" domain="[('phase_id.code', '=', 'DD')]"/>
                <filter name="phase_cd" string="CD" domain="[('phase_id.code', '=', 'CD')]"/>
                <filter name="phase_qc" string="QC" domain="[('phase_id.code', '=', 'QC')]"/>
            </xpath>
            <xpath expr="//filter[@name='project']" position="after">
                <filter name="phase" string="Phase" context="{'group_by':'phase_id'}"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="phase_id" string="Phase"/>
            </xpath>
        </field>
    </record>
    <record id="view_task_tree_inherit_phase" model="ir.ui.view">
        <field name="name">project.task.tree.phase</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <!-- sesuaikan ref kalau berbeda -->
        <field name="arch" type="xml">
            <!-- letakkan phase setelah name atau user -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="phase_id"/>
            </xpath>
        </field>
    </record>


</odoo>

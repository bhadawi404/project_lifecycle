<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_zoning_analysis_inherit_form" model="ir.ui.view">
        <field name="name">project.task.zoning.analysis.inherit.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="analysis_id" readonly="context.get('from_zoning_analysis')"/>
                <field name="available_zoning_line_ids" force_save="1" widget="many2many_tags" invisible="1"/>
                <field name="zoning_line_ids" widget="many2many_tags" domain="[('id', 'in', available_zoning_line_ids)]" options="{'no_create': True}" readonly="context.get('from_zoning_analysis')"/>
            </xpath>
        </field>
    </record>

</odoo>

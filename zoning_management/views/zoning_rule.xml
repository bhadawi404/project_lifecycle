<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="view_project_zoning_rule_list" model="ir.ui.view">
        <field name="name">project.zoning.rule.list</field>
        <field name="model">project.zoning.rule</field>
        <field name="arch" type="xml">
            <list string="Zoning Rules" default_order="name asc">
                <field name="name"/>
                <field name="model_id"/>
                <field name="project_type_id" />
                <field name="jurisdiction"/>
                <field name="operator"/>
                <field name="value"/>
                <field name="sop_id"/>
                <field name="severity"/>
                <field name="auto_action"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_project_zoning_rule_form" model="ir.ui.view">
        <field name="name">project.zoning.rule.form</field>
        <field name="model">project.zoning.rule</field>
        <field name="arch" type="xml">
            <form string="Zoning Rule Definition">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" required="1"/>
                            <field name="project_type_id" />
                            <field name="jurisdiction"/>
                            <field name="legal_reference"/>
                            <field name="severity"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="model_id" required="1" invisible="1"/>
                            <field name="field_id" domain="[('model_id', '=', model_id), ('ttype', 'in', ['float', 'integer', 'monetary', 'numeric'])]" required="1" options="{'no_create': True}"/>
                            <field name="operator" required="1"/>
                            <field name="value" required="1"/>
                            <field name="auto_action"/>
                            <field name="sop_id"/>
                            <field name="note"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Legal References">
                            <group>
                                <field name="snippet_ids" widget="many2many_tags" options="{'no_create': False}"/>
                            </group>

                        </page>
                        <page string="Notes">
                            <group>
                                <field name="note"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_project_zoning_rule_search" model="ir.ui.view">
        <field name="name">project.zoning.rule.search</field>
        <field name="model">project.zoning.rule</field>
        <field name="arch" type="xml">
            <search string="Search Zoning Rules">
                <field name="name"/>
                <field name="model_id"/>
                <field name="field_id"/>
                <field name="operator"/>
                <field name="active"/>
                <separator/>
                <filter string="Active" name="active_true" domain="[('active','=',True)]"/>
                <filter string="Inactive" name="active_false" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- ACTION WINDOW -->
    <record id="project_zoning_rule_action" model="ir.actions.act_window">
        <field name="name">Zoning Rules</field>
        <field name="res_model">project.zoning.rule</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

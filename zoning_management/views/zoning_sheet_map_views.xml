<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View zoning.sheet.map View List -->
    <record id="view_zoning_sheet_map_list" model="ir.ui.view">
        <field name="name">view.zoning.sheet.map.list</field>
        <field name="model">zoning.sheet.map</field>
        <field name="arch" type="xml">
            <list>
                <field name="category"/>
                <field name="name"/>
                <field name="sheet_code"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- View zoning.sheet.map form -->
    <record id="view_zoning_sheet_map_form" model="ir.ui.view">
        <field name="name">view.zoning.sheet.map.form</field>
        <field name="model">zoning.sheet.map</field>
        <field name="arch" type="xml">
            <form string="Zoning Sheet Map">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..." required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sheet_code" required="1"/>
                            <field name="category" required="1"/>
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View zoning.sheet.map search -->
    <record id="view_zoning_sheet_map_search" model="ir.ui.view">
        <field name="name">view.zoning.sheet.map.search</field>
        <field name="model">zoning.sheet.map</field>
        <field name="arch" type="xml">
            <search>
                <field name="category"/>
                <field name="name"/>
                <field name="sheet_code"/>
                <group expand="1" string="Group By">
                    <filter string="Category" name="category" domain="[]" context="{'group_by':'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action zoning.sheet.map -->
    <record id="action_zoning_sheet_map" model="ir.actions.act_window">
        <field name="name">Zoning Sheet Map</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">zoning.sheet.map</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Zoning Sheet Map.
            </p>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View project.type View List -->
    <record id="view_project_type_list" model="ir.ui.view">
        <field name="name">view.project.type.list</field>
        <field name="model">project.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- View project.type form -->
    <record id="view_project_type_form" model="ir.ui.view">
        <field name="name">view.project.type.form</field>
        <field name="model">project.type</field>
        <field name="arch" type="xml">
            <form string="Project Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View project.type search -->
    <record id="view_project_type_search" model="ir.ui.view">
        <field name="name">view.project.type.search</field>
        <field name="model">project.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action project.type -->
    <record id="action_project_type" model="ir.actions.act_window">
        <field name="name">Project Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.type</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Project Type.
            </p>
        </field>
    </record>

</odoo>

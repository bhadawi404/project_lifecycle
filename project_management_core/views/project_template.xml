<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_template_list" model="ir.ui.view">
        <field name="name">view.project.template.list</field>
        <field name="model">project.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="project_type_id"/>
            </list>
        </field>
    </record>

    <record id="view_project_template_form" model="ir.ui.view">
        <field name="name">view.project.template.form</field>
        <field name="model">project.template</field>
        <field name="arch" type="xml">
            <form string="Project Templates">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_type_id" />
                        </group>
                    </group>
                    <separator/>
                    <notebook>
                        <page string="Detail Phase" name="detail_phase">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="number" column_invisible="1"/>
                                    <field name="phase_id" />
                                    <field name="is_zoning_phase" />
                                    <field name="description" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_template_search" model="ir.ui.view">
        <field name="name">view.project.sop.search</field>
        <field name="model">project.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_type_id"/>
                <group expand="1" string="Group By">
                    <filter string="Project Type" name="project_type" domain="[]" context="{'group_by':'project_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="project_template_action" model="ir.actions.act_window">
        <field name="name">Project Templates</field>
        <field name="res_model">project.template</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Project Template.
            </p>
        </field>
    </record>
</odoo>

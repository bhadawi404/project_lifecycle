<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_sop_list" model="ir.ui.view">
        <field name="name">view.project.sop.list</field>
        <field name="model">project.sop</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="project_type_id"/>
                <field name="phase_id"/>
            </list>
        </field>
    </record>

    <record id="view_project_sop_form" model="ir.ui.view">
        <field name="name">view.project.sop.form</field>
        <field name="model">project.sop</field>
        <field name="arch" type="xml">
            <form string="SOP Templates">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_type_id" />
                            <field name="phase_id" required="1"/>
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                    <separator/>
                    <notebook>
                        <page string="Checklist" name="checklist">
                            <field name="checklist_template_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="number" column_invisible="1"/>
                                    <field name="name" />
                                    <field name="notes" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_sop_search" model="ir.ui.view">
        <field name="name">view.project.sop.search</field>
        <field name="model">project.sop</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_type_id"/>
                <field name="phase_id"/>
                <group expand="1" string="Group By">
                    <filter string="Project Type" name="project_type" domain="[]" context="{'group_by':'project_type_id'}"/>
                    <filter string="Phase" name="phase" domain="[]" context="{'group_by':'phase_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="project_sop_action" model="ir.actions.act_window">
        <field name="name">SOP Templates</field>
        <field name="res_model">project.sop</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_project_type': 1, 'search_default_phase': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new SOP Template.
            </p>
        </field>
    </record>
</odoo>

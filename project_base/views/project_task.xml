<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_checklist_inherit_form_view" model="ir.ui.view">
        <field name="name">project.task.checklist.inherit.form.view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="checklist" string="Checklist Item">
                    <field name="checklist_ids" context="{'default_project_id': project_id}">
                        <list editable="bottom">
                            <field name="project_id" column_invisible="1" />
                            <field name="name" />
                            <field name="description" />
                            <field name="user_ids" widget="many2many_avatar_user" options="{'no_open': True, 'no_quick_create': True}" />
                            <field name="status" readonly="1"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_task_checklist_list" model="ir.ui.view">
        <field name="name">project.task.checklist.view.list</field>
        <field name="model">project.task.checklist</field>
        <field name="arch" type="xml">
            <list create="false" delete="false">
                <field name="task_id"/>
                <field name="project_id"/>
                <field name="name"/>
                <field name="user_ids" widget="many2many_avatar_user"/>
                <field name="status"/>
            </list>
        </field>
    </record>
    <record id="view_project_checklist_kanban" model="ir.ui.view">
        <field name="name">project.checklist.view.kanban</field>
        <field name="model">project.task.checklist</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_view o_project_kanban" create="false" delete="false" quick_create="false" group_create="false" group_delete="false" group_edit="false">
                <field name="task_id"/>
                <field name="project_id"/>
                <field name="name"/>
                <field name="user_ids" widget="many2many_avatar_user"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_card shadow-sm rounded-lg p-3">
                            <div class="o_kanban_card_header mb-2 d-flex justify-content-between align-items-center">
                                <span class="badge bg-secondary">
                                    <field name="task_id"/>
                                </span>
                            </div>

                            <div class="o_kanban_card_body text-muted">
                                <strong class="fs-5 text-truncate">
                                    <field name="project_id"/>
                                </strong>
                                <div t-if="record.name.value" class="mt-2">
                                    <field name="name"/>
                                </div>
                                <div t-if="record.description.value" class="mt-2">
                                    <field name="description"/>
                                </div>
                            </div>
                            <footer class="mt-auto pt-0 ms-1">
                                <div class="d-flex ms-auto align-items-center justify-content-end">
                                    <field name="user_ids" widget="many2many_avatar_user" class="me-1" options="{'no_open': True, 'no_quick_create': True}" />
                                </div>
                            </footer>
                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="project_task_checklist_view_form" model="ir.ui.view">
        <field name="name">project_task_checklist.view.form</field>
        <field name="model">project.task.checklist</field>
        <field name="arch" type="xml">
            <form string="Checklist">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label">Title</span>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" />
                            <field name="task_id" />
                        </group>
                        <group>
                            <field name="user_ids" options="{'no_open': True, 'no_quick_create': True}" widget="many2many_avatar_user"/>
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_task_checklist" model="ir.actions.act_window">
        <field name="name"> All Task Checklist</field>
        <field name="res_model">project.task.checklist</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
    <record id="action_project_task_my_checklist" model="ir.actions.act_window">
        <field name="name"> My Task Checklist</field>
        <field name="res_model">project.task.checklist</field>
        <field name="domain">[('user_ids', 'in', [uid])]</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bulk_create_task_view_form" model="ir.ui.view">
        <field name="name">bulk_create_task.view.form</field>
        <field name="model">bulk.create.task</field>
        <field name="arch" type="xml">
            <form string="Bulk Create Task(s)">
                <sheet>
                    <group>
                        <field name="project_id" required="1" options="{'no_create_edit': True,'no_create': True, 'no_open': True}"/>
                        <field name="phase_id" />
                    </group>
                    <group>
                        <separator string="Task Detail"/>
                        <field name="task_ids" nolabel="1">
                            <list editable="bottom">
                                <field name="name" />
                                <field name="user_ids" options="{'no_open': True, 'no_quick_create': True}" widget="many2many_avatar_user"/>
                                <field name="phase_id" widget="selection" help="Optional. If not specified, the task will default to the project's current phase."/>
                                <field name="date_deadline" />
                                <field name="description" />
                            </list>
                        </field>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="bulk_create_task_action" model="ir.actions.act_window">
        <field name="name">Bulk Create Task(s)</field>
        <field name="res_model">bulk.create.task</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="bulk_create_task_menu" name="Bulk Create Task(s)" action="bulk_create_task_action" parent="project.menu_project_management" sequence="0"/>
</odoo>

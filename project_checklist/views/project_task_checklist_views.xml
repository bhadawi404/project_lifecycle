<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_checklist_task_list" model="ir.ui.view">
        <field name="name">project.checklist.view.task.list</field>
        <field name="model">project.checklist.view.task</field>
        <field name="arch" type="xml">
            <list string="Task Checklist" create="false" delete="false">
                <field name="task_id"/>
                <field name="project_id"/>
                <field name="line_name"/>
                <field name="status"/>
                <field name="completed_by"/>
                <field name="completed_on"/>
            </list>
        </field>
    </record>
    <record id="view_project_checklist_task_kanban" model="ir.ui.view">
        <field name="name">project.checklist.view.task.kanban</field>
        <field name="model">project.checklist.view.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_view o_project_kanban" create="false" delete="false" quick_create="false" group_create="false" group_delete="false" group_edit="false">
                <field name="line_name"/>
                <field name="task_id"/>
                <field name="project_id"/>
                <field name="status"/>
                <field name="completed_by"/>
                <field name="completed_on"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record border shadow-sm rounded-lg p-2 my-1">
                            <div class="o_kanban_primary_left">
                                <strong t-esc="record.line_name.value" class="text-dark"/>
                            </div>

                            <div class="o_kanban_details mt-1 text-muted" style="font-size: 12px;">
                                <div>
                                    <strong>Task:</strong>
                                    <t t-esc="record.task_id.value"/>
                                </div>
                                <div>
                                    <strong>Project:</strong>
                                    <t t-esc="record.project_id.value"/>
                                </div>
                                <div t-if="record.completed_by.value">
                                    <strong>By:</strong>
                                    <t t-esc="record.completed_by.value"/>
                                </div>
                                <div t-if="record.completed_on.value">
                                    <strong>On:</strong>
                                    <t t-esc="record.completed_on.value"/>
                                </div>
                            </div>

                            <div class="mt-2">
                                <span t-if="record.status.value == 'todo'" class="badge bg-secondary">To Do</span>
                                <span t-if="record.status.value == 'in_progress'" class="badge bg-info">In Progress</span>
                                <span t-if="record.status.value == 'blocked'" class="badge bg-danger">Blocked</span>
                                <span t-if="record.status.value == 'done'" class="badge bg-success">Done</span>
                                <span t-if="record.status.value == 'na'" class="badge bg-light text-dark">N/A</span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_project_checklist_task" model="ir.actions.act_window">
        <field name="name">Task Checklist</field>
        <field name="res_model">project.checklist.view.task</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_checklist_task_list" model="ir.ui.view">
        <field name="name">project.checklist.view.task.list</field>
        <field name="model">project.checklist.view.task</field>
        <field name="arch" type="xml">
            <list string="Task Checklist" create="false" delete="false">
                <field name="task_id"/>
                <field name="project_id"/>
                <field name="line_name"/>
                <field name="status"/>
                <field name="completed_by"/>
                <field name="completed_on"/>
            </list>
        </field>
    </record>

    <record id="action_project_checklist_task" model="ir.actions.act_window">
        <field name="name">Task Checklist</field>
        <field name="res_model">project.checklist.view.task</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>

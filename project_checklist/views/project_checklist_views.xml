<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_checklist_view_list" model="ir.ui.view">
        <field name="name">project.checklist.view.tree</field>
        <field name="model">project.checklist</field>
        <field name="arch" type="xml">
            <list string="Checklists">
                <field name="name"/>
                <field name="scope_type"/>
                <field name="phase_id"/>
                <field name="progress"/>
            </list>
        </field>
    </record>
    <record id="project_checklist_view_form" model="ir.ui.view">
        <field name="name">project_checklist.view.form</field>
        <field name="model">project.checklist</field>
        <field name="arch" type="xml">
            <form string="Checklists">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" />
                            <field name="scope_type"/>
                            <field name="scope_ref"/>
                        </group>
                        <group>
                            <field name="phase_id" widget="selection" invisible="scope_type != 'project_phase'"/>
                            <field name="progress" readonly="1" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Lines">
                            <field name="line_ids">
                                <list>
                                    <field name="sequence" widget="handle" />
                                    <field name="number"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="status"/>
                                    <field name="is_confirmed"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>
    <record id="project_checklist_action" model="ir.actions.act_window">
        <field name="name">Checklists</field>
        <field name="res_model">project.checklist</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>

<!-- project_checklists/views/project_checklist_views.xml -->
<odoo>
    <record id="action_project_checklist" model="ir.actions.act_window">
        <field name="name">Checklists</field>
        <field name="res_model">project.checklist</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_project_checklist_list" model="ir.ui.view">
        <field name="name">project.checklist.list</field>
        <field name="model">project.checklist</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="project_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
            </list>
        </field>
    </record>

    <record id="view_project_checklist_form" model="ir.ui.view">
        <field name="name">project.checklist.form</field>
        <field name="model">project.checklist</field>
        <field name="arch" type="xml">
            <form string="Checklist">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Kickoff Meetiing"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="note"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Checklist Lines">
                            <field name="line_ids" widget="one2many_list">
                                <list>
                                    <field name="sequence" widget="handle" style="width:40px;"/>
                                    <field name="code" style="width:120px;"/>
                                    <field name="name" style="width:200px;"/>
                                    <field name="description" style="width:250px; white-space:normal;"/>
                                    <!-- <button string="Add line to other checklist(s)" name="add_line_to_checklist_wizard_action" type="object" class="oe_highlight"/> -->
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_page_kanban" model="ir.ui.view">
        <field name="name">project.page.kanban</field>
        <field name="model">project.page</field>
        <field name="arch" type="xml">
            <kanban class="o_project_page_kanban" default_order="id desc" create="true">
                <field name="name"/>
                <field name="code"/>
                <field name="project_id"/>
                <field name="description"/>

                <templates>
                    <!-- Tampilan card setiap record -->
                    <t t-name="kanban-box">
                        <div class="o_kanban_card shadow-sm rounded-lg p-3">
                            <div class="o_kanban_card_header mb-2 d-flex justify-content-between align-items-center">
                                <strong class="fs-5 text-truncate">
                                    <field name="name"/>
                                </strong>
                                <span class="badge bg-secondary">
                                    <field name="code"/>
                                </span>
                            </div>

                            <div class="o_kanban_card_body text-muted">
                                <div t-if="record.project_id.value">
                                    <span class="fa fa-folder-open me-1" title="Project"/>
                                    <field name="project_id"/>
                                </div>
                                <div t-if="record.description.value" class="mt-2">
                                    <field name="description"/>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer mt-3 d-flex justify-content-between align-items-center">
                                <field name="activity_ids" widget="kanban_activity"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_project_page_list" model="ir.ui.view">
        <field name="name">project.page.list</field>
        <field name="model">project.page</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="project_id"/>
            </list>
        </field>
    </record>
    <record id="view_project_page_form" model="ir.ui.view">
        <field name="name">project.page.form</field>
        <field name="model">project.page</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                            <field name="project_id" required="1"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>
    <record id="action_project_page" model="ir.actions.act_window">
        <field name="name">Project Pages</field>
        <field name="res_model">project.page</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>

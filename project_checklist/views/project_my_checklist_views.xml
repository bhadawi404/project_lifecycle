<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_checklist_employee_list" model="ir.ui.view">
        <field name="name">project.checklist.view.employee.list</field>
        <field name="model">project.checklist.view.employee</field>
        <field name="arch" type="xml">
            <list string="My Checklist" create="false" delete="false">
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="line_name"/>
                <field name="status"/>
                <field name="completed_by"/>
                <field name="completed_on"/>
            </list>
        </field>
    </record>

    <record id="action_project_checklist_employee" model="ir.actions.act_window">
        <field name="name">My Checklist</field>
        <field name="res_model">project.checklist.view.employee</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>This view shows all checklist lines assigned to each employee.</p>
        </field>
    </record>
</odoo>

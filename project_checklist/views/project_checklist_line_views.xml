<!-- project_checklists/views/project_checklist_line_views.xml -->
<odoo>
    <record id="view_project_checklist_line_list" model="ir.ui.view">
        <field name="name">project.checklist.line.list</field>
        <field name="model">project.checklist.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="assoc_task_ids" widget="many2many_tags"/>
                <field name="assoc_employee_ids" widget="many2many_avatar_user"/>
                <field name="checklist_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_project_checklist_line_form" model="ir.ui.view">
        <field name="name">project.checklist.line.form</field>
        <field name="model">project.checklist.line</field>
        <field name="arch" type="xml">
            <form string="Checklist Line">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="assoc_employee_ids" widget="many2many_tags" string="Assignees"/>
                            <field name="checklist_ids" widget="many2many_tags" string="Associated Checklist(s)"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <group>
                        <separator string="Associated Task(s)"/>
                        <field name="assoc_task_ids" nolabel="1">
                            <list editable="top" create="0" delete="0">
                                <field name="name" />
                                <field name="user_ids" options="{'no_open': True, 'no_quick_create': True}" widget="many2many_avatar_user"/>
                                <field name="date_deadline" />
                                <field name="description" />
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

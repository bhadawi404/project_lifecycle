<!-- project_checklists/views/project_checklist_line_views.xml -->
<odoo>
    <record id="view_project_checklist_line_list" model="ir.ui.view">
        <field name="name">project.checklist.line.list</field>
        <field name="model">project.checklist.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="project_id"/>
                <field name="assoc_task_ids" widget="many2many_tags"/>
                <field name="assoc_employee_ids" widget="many2many_avatar_user"/>
                <field name="checklist_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_project_checklist_line_form" model="ir.ui.view">
        <field name="name">project.checklist.line.form</field>
        <field name="model">project.checklist.line</field>
        <field name="arch" type="xml">
            <form string="Checklist Line">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="primary_checklist_id" invisible="1"/>
                            <field name="checklist_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="description"/>
                            </group>
                        </page>
                        <page string="Assignments">
                            <group>
                                <field name="assoc_employee_ids" widget="many2many_tags"/>
                                <field name="assoc_task_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
